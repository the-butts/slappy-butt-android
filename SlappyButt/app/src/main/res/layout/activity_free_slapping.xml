    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <include
            android:id="@+id/layout_1"
            layout="@layout/animation_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp" />

    </FrameLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.thebutts.slappybutt.FreeSlappingActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.01"
            android:weightSum="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:text="FL"
                android:id="@+id/btnFlintLeft"
                android:layout_weight="0.29"
                android:alpha="0.5" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:text="FR"
                android:id="@+id/btnFlintRight"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.16"
                android:alpha="0.5" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:text="FD"
                android:id="@+id/btnFlintDown"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.06"
                android:alpha="0.5" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:text="FU"
                android:id="@+id/btnFlintUp"
                android:layout_weight="0.13"
                android:alpha="0.5" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:text="PI"
                android:id="@+id/btnPinchIn"
                android:layout_weight="0.23"
                android:alpha="0.5" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="72dp"
                android:layout_height="252dp"
                android:text="PO"
                android:id="@+id/btnPinchOut"
                android:layout_gravity="bottom"
                android:alpha="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button

                android:id="@+id/btn_slapp_left_butt"
                android:layout_width="0dp"
                android:layout_height="318dp"
                android:layout_weight="0.5"
                android:alpha="0"
                android:layout_gravity="bottom" />

            <Button
                android:id="@+id/btn_slap_right_butt"
                android:layout_width="0dp"
                android:layout_height="318dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.5"
                android:alpha="0" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
