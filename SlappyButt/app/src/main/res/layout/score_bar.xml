<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/score_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="20"
        android:background="#ab6800fa">

        <Button
            android:id="@+id/btn_to_main_menu"
            style="@style/button_common_custom_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="â—€"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/slaps_text_container"
            style="@style/ScoreBarTextStyle"
            android:text="Slaps:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/tv_score_container"
            style="@style/ScoreBarTextStyle"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#90ffa5"
            android:textSize="20sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <TextView
            style="@style/ScoreBarTextStyle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Time to slap:"
            android:id="@+id/tv_stage_text" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4.05" />

        <TextView
            style="@style/ScoreBarTextStyle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/tv_time_left_value"
            android:textColor="#ef8d8d"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>