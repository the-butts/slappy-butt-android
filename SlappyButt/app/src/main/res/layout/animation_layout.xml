<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:clickable="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLeftButt"
        android:src="@drawable/butt_invisible"
        android:padding="0dp"
        android:layout_above="@+id/bottom_aligner_iv"
        android:layout_alignLeft="@+id/bottom_aligner_iv"
        android:layout_alignStart="@+id/bottom_aligner_iv"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivRightButt"
        android:src="@drawable/butt_invisible"
        android:alpha="1"
        android:padding="0dp"
        android:layout_alignTop="@+id/ivLeftButt"
        android:layout_toRightOf="@+id/ivLeftButt"
        android:layout_toEndOf="@+id/ivLeftButt"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivBodyTop"
        android:src="@drawable/first_torso_initial"
        android:padding="0dp"
        android:layout_above="@+id/ivLeftButt"
        android:layout_alignLeft="@+id/ivLeftButt"
        android:layout_alignStart="@+id/ivLeftButt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/bottom_aligner_iv"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bottom_aligner" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/ivLeftButt"
        android:layout_alignLeft="@+id/ivLeftButt"
        android:layout_alignStart="@+id/ivLeftButt"
        android:layout_alignRight="@+id/ivRightButt"
        android:layout_alignEnd="@+id/ivRightButt"
        android:id="@+id/slappingFrame"
        android:clickable="false"
        android:layoutMode="opticalBounds" />

    <!--set torso invisible-->
</RelativeLayout>